<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background_Color"
    android:layoutDirection="ltr"
    android:padding="20dp"
    tools:context=".activities.ChoseLoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_image_chose"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="@string/welcome_to_our_groshop"
            android:textColor="?attr/text_color"
            android:textSize="@dimen/text_medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="@string/contrary_to_popular_belief_lorem_ipsum_is_not_simply_rand"
            android:textColor="?attr/text_color"
            android:textSize="@dimen/text_medium" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/box_radius_gray_lite"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="@string/create_new_account"
            android:textColor="?attr/text_color"
            android:textSize="@dimen/text_large" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/box_radius_gray_dark"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="@string/sign_in_your_account"
            android:textColor="?attr/text_color"
            android:textSize="@dimen/text_large" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearModeLiteAndDarkActivityChoseLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDarkModeActivityChoseLogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/box_radius_gray_dark"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/dark_mode"
            android:textAllCaps="false"
            android:textColor="?attr/text_color"
            android:textSize="@dimen/text_medium" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLiteModeActivityChoseLogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/box_radius_gray_lite"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/lite_mode"
            android:textAllCaps="false"
            android:textColor="?attr/text_color"
            android:textSize="@dimen/text_medium" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearModeLiteAndDarkActivityChoseLogin"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:id="@+id/imgOpenMenuActivityChoseLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="@string/language"
            android:textColor="?attr/text_color"
            android:textSize="@dimen/text_medium" />
    </LinearLayout>


</RelativeLayout>